<div id="detail-bar" class="w-full h-72 md:h-[30rem] w-container">
    <div class="flex flex-nowrap h-full mt-10 p-5 center">
        <div id="icon-fish-<%= data.fish.id %>" class="icon w-20 h-20 md:w-40 md:h-40">
        </div>
        <div class="ml-10 md:ml-24 w-[40%]">
            <div class="flex flex-nowrap">
                <div>
                    <h1 class="fs-larger md:fs-xxx-large font-bold text-font-black dark:text-font-light">
                        <%= data.fish.name; %>
                    </h1>
                </div>
                <div>
                    <a href="<%= data.fish.site %>" target="_blank">
                        <div class="icon icon-link ml-1 mt-0.5 md:mt-2 w-3 h-3 md:w-8 md:h-8"></div>
                    </a>
                </div>
            </div>
            <div class="mt-2">
                <div class="fs-small md:fs-larger line-h-4 md:line-h-6 max-h-8 md:max-h-12 overflow-y-hidden overflow-ellipsis text-font-lighter-black dark:text-font-darker-light">
                    <%= data.fish.description %>
                </div>
            </div>
        </div>
        <div class="ml-auto md:mr-16">
            <a href="#download">
                <div class="icon icon-download h-7 w-7 md:h-20 md:w-20">
                </div>
            </a>
        </div>
    </div>
</div>